---
// src/components/EventTimeline.astro;
---

<div class="timeline">
    <div class="timeline-item">
        <div class="time">19:00 - 20:30</div>
        <div class="artist">SBK101</div>
        <div class="genre">Deep House</div>
    </div>

    <div class="timeline-item">
        <div class="time">20:30 - 22:00</div>
        <div class="artist">Soveroon b2b HotTape</div>
        <div class="genre">Techno</div>
    </div>

    <div class="timeline-item">
        <div class="time">22:00 - 23:30</div>
        <div class="artist">Carol NYX</div>
        <div class="genre">Psy Trance - Techno</div>
    </div>

    <div class="timeline-item">
        <div class="time">23:30 - 01:00</div>
        <div class="artist">Rowsi b2b Didixx</div>
        <div class="genre">Hard Trance - Hard Bounce</div>
    </div>
</div>

<style>
    .timeline {
        max-width: 900px;
        margin: 0 auto;
        padding: 3rem 1rem;
        background: rgba(0, 0, 0, 0.6);
        border-radius: 12px;
        border: 1px solid var(--color-accent);
        backdrop-filter: blur(6px);
        box-shadow: 0 0 20px rgba(255, 0, 0, 0.2);
    }

    .timeline-item {
        padding: 1.5rem 1rem;
        margin-bottom: 1.5rem;
        border-left: 4px solid var(--color-accent);
        background: rgba(255, 0, 0, 0.03);
        position: relative;
        transition: all 0.3s ease;
    }

    .timeline-item:hover {
        background: rgba(255, 0, 0, 0.1);
        transform: translateX(6px);
    }

    .time {
        color: var(--color-accent);
        font-weight: bold;
        font-size: 1.2rem;
        margin-bottom: 0.4rem;
    }

    .artist {
        font-size: 1.8rem;
        font-weight: 800;
        color: var(--color-light);
        margin-bottom: 0.2rem;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    .genre {
        color: var(--color-text-muted);
        font-style: italic;
        font-size: 1rem;
    }

    @media (max-width: 768px) {
        .timeline {
            padding: 2rem 1rem;
        }

        .artist {
            font-size: 1.5rem;
        }
    }
</style>

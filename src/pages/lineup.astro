---
import MainLayout from "../layouts/Layout.astro";
import EventTimeline from "../components/EventTimeLine.astro";

const EVENT_DATE_DISPLAY = "25 Abril 2025";
const EVENT_LOCATION = "Mercat Vell, Mollet";
---

<script>
    const observer = new IntersectionObserver(
        (entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add("visible");
                    observer.unobserve(entry.target);
                }
            });
        },
        { threshold: 0.2 }
    );

    // Espera a que el DOM esté listo y verifica:
    document.addEventListener("DOMContentLoaded", () => {
        const lineup = document.querySelector(".lineup-section");
        if (lineup) observer.observe(lineup);
    });
</script>

<MainLayout title="Line Up | Mollettronika">
    <section class="lineup-section">
        <div class="container">
            <h1 class="title">LINE UP</h1>
            <h2 class="subtitle">{EVENT_DATE_DISPLAY} • {EVENT_LOCATION}</h2>

            <EventTimeline />

            <div class="cta-container">
                <a href="/#ubicacion" class="cta-button">¿CÓMO LLEGAR?</a>
            </div>
        </div>
    </section>
</MainLayout>

<style>
    .lineup-section {
        padding: 4rem 1rem 4rem;
        background: linear-gradient(to bottom, #050000, #1a0505, #000000);
        min-height: 80vh;
        color: white;
    }

    .title {
        font-size: clamp(2.5rem, 8vw, 4rem);
        color: var(--color-accent);
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 900;
    }
    .subtitle {
        font-size: clamp(1.2rem, 3vw, 1.5rem);
        margin-bottom: 3rem;
        opacity: 0.9;
        color: var(--color-text-muted);
    }
    .cta-container {
        margin-top: 3rem;
    }

    @media (max-width: 768px) {
        .lineup-section {
            padding: 3>rem 1rem;
        }
        .title {
            font-size: 2.2rem;
        }
        .subtitle {
            font-size: 1rem;
            margin-bottom: 2rem;
        }
        .cta-button {
            font-size: 0.9rem;
            padding: 0.8rem 2rem;
        }
    }
    /* Centrado real */
    .lineup-section .container {
        margin: 0 auto;
        padding: 0 1rem;
        text-align: center;
    }

    /* Sombra suave al título */
    .title {
        text-shadow: 0 0 15px rgba(var(--color-accent-rgb), 0.6);
    }

    /* Fade‑in a la sección entera */
    .lineup-section {
        opacity: 0;
        transform: translateY(40px);
        transition: 0.8s;
    }
    .lineup-section.visible {
        opacity: 1;
        transform: none;
    }
</style>
